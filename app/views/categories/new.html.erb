<!DOCTYPE html>
<html>
<head>
  <title>Create New Category</title>
  <%= stylesheet_link_tag 'cat_new',media:'all', 'data-turbolinks-track':'reload' %>
</head>
<body>

<div class="category-form">
  <h1>Create New Category</h1>
  <%= form_with(model: @category, url: categories_path, class: "category-form") do |form| %>
    <!-- Form fields for category name, etc. -->
    <%= form.label :name, "Category Name" %>
    <%= form.text_field :name, class: "form-field" %>

    <!-- Add more form fields as needed -->

    <%= form.submit "Create Category", class: "submit-button" %>
  <% end %>
</div>

</body>
</html>