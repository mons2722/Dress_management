<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add New Dress</title>
  <%= stylesheet_link_tag 'dress_new', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
<body>
<div class="container2" >
  <h2>Add New Dress</h2>
  <%= form_with(model: @dress, url: dresses_path, local: true) do |form| %>
    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name %>
    </div>

    <div class="field" style="text-align: center;">
    <%= form.label :sizes, class: "sizes-label" %>
    <div class="sizes-checkboxes" style="display: inline-block;">
      <% Size.all.each do |size| %>
        <label class="size-checkbox" style="display: inline-block; margin-right: 10px;">
          <%= form.check_box :size_ids, { multiple: true }, size.id, nil %>
          <%= size.name %>
        </label>
      <% end %>
    </div>
  </div>
    <div class="field">
      <%= form.label :color %>
      <%= form.text_field :color %>
    </div>

    <div class="field">
      <%= form.label :price %>
      <%= form.text_field :price %>
    </div>

    <div class="field">
      <%= form.label :material %>
      <%= form.text_field :material %>
    </div>

    <div class="field">
      <%= form.label :stock %>
      <%= form.number_field :stock %>
    </div>

    <div class="field">
      <%= form.label :category_id %>
      <%= form.collection_select :category_id, Category.all, :id, :name %>
    </div>

    <div class="field">
  <%= form.label :image %>
  <%= form.file_field :image %>
</div>

    <div class="actions">
      <%= form.submit "Create Dress" %>
    </div>
  <% end %>

  <%= link_to "Back", dresses_path %>
</div>

</body>
</html>