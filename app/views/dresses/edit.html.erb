<!DOCTYPE html>
<html>
<head>
  <title>Edit Dress</title>
  <%= stylesheet_link_tag 'edit', media: 'all', 'data-turbolinks-track': 'reload' %>
  </head>
<body>

<div class="container2">
  <h1>Edit Dress</h1>

  <%= form_for @dress do |f| %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
    <%= f.label :sizes, class: "sizes-label" %>
    <div class="sizes-checkboxes">
      <%= f.collection_check_boxes :size_ids, Size.all, :id, :name, {}, class: "size-checkbox" %>
    </div>
    </div>

    <div class="field">
      <%= f.label :color %>
      <%= f.text_field :color %>
    </div>

    <div class="field">
      <%= f.label :price %>
      <%= f.number_field :price %>
    </div>

    <div class="field">
      <%= f.label :material %>
      <%= f.text_field :material %>
    </div>

    <div class="field">
      <%= f.label :stock %>
      <%= f.number_field :stock %>
    </div>

    <div class="actions">
      <%= f.submit 'Update Dress' %>
    </div>
  <% end %>

  <%= link_to 'Back', dresses_path %>
</div>

</body>
</html>
